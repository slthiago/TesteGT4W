@model IEnumerable<TesteGT4W.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<br />
<h2>Pessoas Cadastradas</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                NOME
            </th>
            <th>
                CPF
            </th>
            <th>
                DATA DE NASCIMENTO
            </th>
            <th>
                PESO
            </th>
            <th>
                UF
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateNascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uf)
                </td>
                <td>
                    <button type="button" class="btn btn-info"><a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: none; color: #fff;">Editar</a></button>
                    <button type="button" class="btn btn-primary"><a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: none; color: #fff;">Detalhes</a></button>
                    <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: none; color: #fff;">Excluir</a></button>
</td>
            </tr>
        }
    </tbody>
</table>
